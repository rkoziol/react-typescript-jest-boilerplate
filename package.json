{
  "name": "react-typescript-jest-boilerplate",
  "version": "1.0.2",
  "description": "Boilerplate for React app with Typescript and Jest lib",
  "main": "index.js",
  "scripts": {
    "start": "webpack-dev-server --mode development --open --hot --config ./webpack.config.js",
    "build": "webpack --mode production --config ./webpack.config.js",
    "lint": "npm run lint:code && npm run lint:style",
    "lint:code": "eslint src/**/*.{js,ts,tsx} --quiet",
    "lint:style": "stylelint src/**/*.scss",
    "test": "jest --config=jest.config.js",
    "test:watch": "jest --config=jest.config.js --watch",
    "test:coverage": "jest --config=jest.config.js --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rkoziol/react-typescript-jest-boilerplate.git"
  },
  "keywords": [
    "react",
    "typescript",
    "javascript",
    "jest",
    "boilerplate",
    "rkoziol"
  ],
  "author": "rkoziol",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/rkoziol/react-typescript-jest-boilerplate/issues"
  },
  "homepage": "https://github.com/rkoziol/react-typescript-jest-boilerplate#readme",
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@types/react-router-dom": "^5.3.0",
    "@types/react-test-renderer": "^17.0.1",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "css-loader": "^6.3.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-css-modules": "^2.11.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.26.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.3.2",
    "husky": "^7.0.2",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.2.1",
    "mini-css-extract-plugin": "^2.3.0",
    "node-sass": "^7.0.0",
    "prettier": "^2.4.1",
    "react-test-renderer": "^17.0.2",
    "sass-loader": "^12.1.0",
    "source-map-loader": "^3.0.0",
    "style-loader": "^3.3.0",
    "stylelint": "^13.13.1",
    "stylelint-config-sass-guidelines": "^8.0.0",
    "ts-jest": "^27.0.5",
    "ts-loader": "^9.2.6",
    "typescript": "^4.4.3",
    "webpack": "^5.53.0",
    "webpack-cli": "^4.8.0",
    "webpack-dev-server": "^4.2.1"
  },
  "dependencies": {
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-router-dom": "^5.2.0"
  }
}
